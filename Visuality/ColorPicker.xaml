<Window x:Class="UISections.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uilib="clr-namespace:Aimmy2.UILibrary"
        xmlns:theme="clr-namespace:Aimmy2.Theme"
        theme:ThemeBehavior.AutoRegister="True"
        Title="OVERLAY Color Picker"
        Height="405"
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Margin="10,10,10,0">
        <Border x:Name="MainBorder"
                CornerRadius="8"
                BorderBrush="{DynamicResource ThemeColorDark}"
                BorderThickness="1"
                Padding="0"
                MouseMove="MainBorder_MouseMove">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                         StartPoint="0,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5"
                                CenterX="0.5" />
                            <SkewTransform CenterX="0.5"
                               CenterY="0.5" />
                            <RotateTransform x:Name="RotaryGradient"
                                 Angle="0"
                                 CenterX="0.5"
                                 CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="Black"
                      Offset="0.27" />
                    <GradientStop x:Name="GradientThemeStop"
              Color="#FF120338"
              Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid Margin="0,0,0,21">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" Background="{DynamicResource ThemeColor}" MouseDown="Header_MouseDown">
                    <Border Padding="8" Background="Transparent" DockPanel.Dock="Left">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path x:Name="AimmyLogo"
                                  Fill="White"
                                  StrokeThickness="1.33333"
                                  Stretch="Fill"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"
                                  Width="20"
                                  Height="10"
                                  Margin="0,0,8,0">
                                <Path.Data>
                                    <PathGeometry Figures="M 18.2472,490.72756 0.18686636,472.66723 153.0173,318.84293 305.84774,165.01862 l 17.74245,17.70593 17.74244,17.70592 17.0189,-16.98112 c 9.36039,-9.33961 17.60957,-16.98112 18.33151,-16.98112 0.72194,0 69.86022,68.54563 153.64061,152.32363 l 152.32798,152.32362 -18.32581,18.45368 -18.3258,18.45368 -152.3021,-153.11064 -152.3021,-153.11063 -20.36457,20.6423 C 309.83073,233.79713 241.18587,302.86906 168.4871,375.93703 L 36.307534,508.7879 Z"
                                  FillRule="NonZero" />
                                </Path.Data>
                            </Path>

                            <TextBlock Text="701"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       FontFamily="Segoe UI"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Button x:Name="Exit"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Right"
                            Background="{x:Null}"
                            BorderBrush="{x:Null}"
                            Foreground="White"
                            FontFamily="Segoe MDL2 Assets"
                            Padding="15,0,15,0"
                            materialDesign:ButtonAssist.CornerRadius="0,5,5,0"
                            BorderThickness="0,0,0,0"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Click="Exit_Click" />
                </DockPanel>
                <uilib:AColorWheel x:Name="ColorWheelControl"
                  Grid.Row="1"
                  Margin="10,20,10,0" 
                  Foreground="{x:Null}"
                  Title="{Binding ColorPickerTitle, RelativeSource={RelativeSource AncestorType=Window}}" Loaded="ColorWheelControl_Loaded"/>

            </Grid>
        </Border>
    </Grid>
</Window>