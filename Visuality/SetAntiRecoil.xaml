<Window x:Class="Visuality.SetAntiRecoil"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:Ant="clr-namespace:AntWpf.Controls;assembly=AntWpf"
        xmlns:theme="clr-namespace:Aimmy2.Theme"
        xmlns:local="clr-namespace:Visuality"
        theme:ThemeBehavior.AutoRegister="True"
        mc:Ignorable="d"
        Title="Set Static FOV Positioning"
        Background="{x:Null}"
        Foreground="{x:Null}"
        Topmost="True"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Width="1920"
        Height="1080">
    <Grid>
        <Border VerticalAlignment="Top"
                Height="200">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#00000000"
                                  Offset="1" />
                    <GradientStop x:Name="TopGradientStop"
                                  Color="#FF120338"
                                  Offset="0" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Label Content="701"
                       Foreground="#DDFFFFFF"
                       FontFamily="{StaticResource AKONY}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Margin="25,25,0,0"
                       FontSize="20"
                       Padding="0,0,0,0" />
                <Label x:Name="SettingLabel"
                       VerticalAlignment="Top"
                       Foreground="#DDFFFFFF"
                       FontFamily="{StaticResource Atkinson Hyperlegible}"
                       Content="Mantenga presionado el botón del mouse y la bala se eliminará."
                       FontSize="20"
                       VerticalContentAlignment="Center"
                       Padding="0"
                       Margin="25,50,25,0" />
            </Grid>
        </Border>
        <Border x:Name="BulletBorder"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Width="270"
                Height="140"
                CornerRadius="5,5,5,5"
                BorderBrush="Black"
                BorderThickness="1,1,1,1"
                Margin="0,0,0,100">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5"
                                            CenterX="0.5" />
                            <SkewTransform CenterX="0.5"
                                           CenterY="0.5" />
                            <RotateTransform x:Name="RotaryGradient"
                                             Angle="0"
                                             CenterX="0.5"
                                             CenterY="0.5" />
                            <TranslateTransform />
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="Black"
                                  Offset="0.27" />
                    <GradientStop x:Name="ThemeGradientStop"
                                  Color="#FF120338"
                                  Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Label Content="¿Cuántas balas has disparado?"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Foreground="#DDFFFFFF"
                       Padding="0,0,0,0"
                       FontFamily="{StaticResource Atkinson Hyperlegible}"
                       Margin="0,22,0,0" />
                <Border VerticalAlignment="Top"
                        Height="35"
                        Margin="10,46,10,0"
                        Background="#3F3C3C3C"
                        BorderBrush="#3FFFFFFF"
                        BorderThickness="1"
                        CornerRadius="5" />
                <TextBox x:Name="BulletNumberTextbox"
                         BorderThickness="1"
                         TextWrapping="Wrap"
                         Tag="Insertar número aquí"
                         VerticalAlignment="Top"
                         FontFamily="{StaticResource Atkinson Hyperlegible}"
                         Padding="5,5,5,5"
                         Style="{DynamicResource placeHolder}"
                         BorderBrush="{x:Null}"
                         Background="{x:Null}"
                         Foreground="White"
                         Margin="10,46,10,0"
                         HorizontalContentAlignment="Center"
                         VerticalContentAlignment="Center"
                         TextChanged="BulletNumberTextbox_TextChanged" />
                <Ant:Button x:Name="ConfirmB"
                            Tag="Theme:Background"
                            BorderBrush="#FFD3ADF7"
                            EffectBrush="#FFD3ADF7"
                            Content="Confirma"
                            HorizontalAlignment="Left"
                            Height="24"
                            Width="70"
                            VerticalAlignment="Bottom"
                            Padding="0,0,0,0"
                            FontFamily="{StaticResource Atkinson Hyperlegible}"
                            BorderThickness="0,0,0,0"
                            FontSize="12"
                            Foreground="White"
                            Click="ConfirmB_Click"
                            Margin="64,0,0,20" />
                <Ant:Button x:Name="TryAgainB"
                            Tag="Theme:Background"
                            BorderBrush="#FFD3ADF7"
                            EffectBrush="#FFD3ADF7"
                            Content="Reintenta"
                            HorizontalAlignment="Left"
                            Height="24"
                            Width="70"
                            VerticalAlignment="Top"
                            Padding="0,0,0,0"
                            FontFamily="{StaticResource Atkinson Hyperlegible}"
                            BorderThickness="0,0,0,0"
                            FontSize="12"
                            Foreground="White"
                            Click="TryAgainB_Click"
                            Margin="139,94,0,0"
                            Opacity="0.5" />
            </Grid>
        </Border>
    </Grid>
</Window>