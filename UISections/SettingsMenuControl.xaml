<UserControl x:Class="Aimmy2.Controls.SettingsMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="clr-namespace:Aimmy2.UILibrary"
             mc:Ignorable="d">
    <ScrollViewer x:Name="SettingsMenu"
                  VerticalScrollBarVisibility="Auto"
                  PanningMode="VerticalOnly">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="SSP1"
                        Grid.Column="0"
                        Margin="5,0,10,0">
                <StackPanel x:Name="SettingsConfig" />
                <StackPanel x:Name="DisplaySelectMenu" />
            </StackPanel>
            <StackPanel x:Name="SSP2"
                        Grid.Column="1"
                        Margin="5,0,10,0">
                <StackPanel x:Name="XYPercentageEnablerMenu" />
                <StackPanel x:Name="ThemeMenu" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>