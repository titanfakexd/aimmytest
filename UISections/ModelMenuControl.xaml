<UserControl x:Class="Aimmy2.Controls.ModelMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <ScrollViewer x:Name="ModelMenu"
                  VerticalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly">
        <Grid>
            <TabControl HorizontalContentAlignment="Left"
                        Margin="10,0,10,0">
                <TabItem BorderThickness="0"
                         Padding="0"
                         Height="33">
                    <TabItem.Header>
                        <TextBlock Text="Modelos Locales"
                                   FontSize="11"
                                   Foreground="White"
                                   FontFamily="{StaticResource Atkinson Hyperlegible}" />
                    </TabItem.Header>
                    <Grid>
                        <ScrollViewer x:Name="LocalModelStoreMenu"
                                      VerticalScrollBarVisibility="Visible"
                                      PanningMode="VerticalOnly"
                                      Margin="0,10,-6,0">
                            <StackPanel>
                                <Border Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="1"
                                CornerRadius="5,5,0,0"
                                Margin="0,0,0,0"
                                Height="39">
                                    <TextBox
                                x:Name="LocalModelSearchBox"
                                FontFamily="{StaticResource Atkinson Hyperlegible}"
                                Padding="5"
                                Foreground="White"
                                TextChanged="LocalModelSearchBox_TextChanged">
                                    </TextBox>
                                </Border>
                                <StackPanel x:Name="LocalModelStoreScroller" />
                            </StackPanel>
                        </ScrollViewer>
                        <Border Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="1"
                                Margin="0,55,0,54">
                            <ListBox x:Name="ModelListBox"
                                     AllowDrop="True"
                                     Drop="ModelListBox_Drop"
                                     DragOver="ModelListBox_DragOver"
                                     Foreground="#DDFFFFFF"
                                     FontFamily="{StaticResource Atkinson Hyperlegible}"
                                     Margin="0"
                                     Padding="2">
                            </ListBox>
                        </Border>
                        <Border Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="1"
                                CornerRadius="0,0,0,5"
                                Margin="0,0,44,10"
                                VerticalAlignment="Bottom"
                                Height="39">
                            <Label x:Name="SelectedModelNotifier"
                                   Foreground="#DDFFFFFF"
                                   Content="Loaded Model: N/A"
                                   FontFamily="{StaticResource Atkinson Hyperlegible}"
                                   Padding="10"></Label>
                        </Border>
                        <Button x:Name="OpenFolderB_ModelWindow"
                                Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                Content="&#xE838;"
                                HorizontalAlignment="Right"
                                Height="39"
                                Width="39"
                                Margin="0,0,0,10"
                                VerticalAlignment="Bottom"
                                Padding="0,0,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                BorderThickness="1"
                                materialDesign:ButtonAssist.CornerRadius="0,0,5,0"
                                FontSize="13"
                                Foreground="White"
                                Click="OpenFolderB_Click"
                                Tag="models" />
                    </Grid>
                </TabItem>
                <TabItem BorderThickness="0"
                         Padding="0"
                         Height="33"
                         Width="75">
                    <TabItem.Header>
                        <TextBlock Text="Local Configs"
                                   FontSize="11"
                                   Foreground="White"
                                   FontFamily="{StaticResource Atkinson Hyperlegible}" />
                    </TabItem.Header>
                    <Grid>
                        <ScrollViewer x:Name="LocalConfigStoreMenu"
                              VerticalScrollBarVisibility="Visible"
                              PanningMode="VerticalOnly"
                              Margin="0,10,-6,0">
                            <StackPanel>
                                <Border Background="#3F3C3C3C"
                                    BorderBrush="#3FFFFFFF"
                                    BorderThickness="1"
                                    CornerRadius="5,5,0,0"
                                    Margin="0,0,0,0"
                                    Height="39">
                                    <TextBox
                                        x:Name="LocalConfigSearchBox"
                                        FontFamily="{StaticResource Atkinson Hyperlegible}"
                                        Padding="5"
                                        Foreground="White"
                                        TextChanged="LocalConfigSearchBox_TextChanged">
                                    </TextBox>
                                </Border>
                                <StackPanel x:Name="LocalConfigStoreScroller" />
                            </StackPanel>
                        </ScrollViewer>
                        <Border Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="1"
                                Margin="0,55,0,54">
                            <ListBox x:Name="ConfigsListBox"
                                     AllowDrop="True"
                                     Drop="ConfigsListBox_Drop"
                                     DragOver="ConfigsListBox_DragOver"
                                     Foreground="#DDFFFFFF"
                                     FontFamily="{StaticResource Atkinson Hyperlegible}"
                                     Margin="0"
                                     Padding="2" />
                        </Border>
                        <Border Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                BorderThickness="1"
                                CornerRadius="0,0,0,5"
                                Margin="0,0,44,10"
                                VerticalAlignment="Bottom"
                                Height="39">
                            <Label x:Name="SelectedConfigNotifier"
                                   Foreground="#DDFFFFFF"
                                   Content="Loaded Config: N/A"
                                   FontFamily="{StaticResource Atkinson Hyperlegible}"
                                   Padding="10"></Label>
                        </Border>
                        <Button x:Name="OpenFolderB_ConfigWindow"
                                Background="#3F3C3C3C"
                                BorderBrush="#3FFFFFFF"
                                Content="&#xE838;"
                                HorizontalAlignment="Right"
                                Height="39"
                                Width="39"
                                Margin="0,0,0,10"
                                VerticalAlignment="Bottom"
                                Padding="0,0,0,0"
                                FontFamily="Segoe MDL2 Assets"
                                BorderThickness="1"
                                materialDesign:ButtonAssist.CornerRadius="0,0,5,0"
                                FontSize="13"
                                Foreground="White"
                                Click="OpenFolderB_Click"
                                Tag="configs" />
                    </Grid>
                </TabItem>
                <TabItem BorderThickness="0"
                         Padding="0"
                         Height="33"
                         Width="132">
                    <TabItem.Header>
                        <TextBlock Text="Descarga Modelos"
                                   FontSize="11"
                                   Foreground="White"
                                   FontFamily="{StaticResource Atkinson Hyperlegible}" />
                    </TabItem.Header>
                    <Grid>
                        <Label x:Name="LackOfModelsText"
                               Visibility="Collapsed"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Content="There is no downloadable models at the moment, please check again later."
                               Foreground="#DDFFFFFF" />
                        <ScrollViewer x:Name="ModelStoreMenu"
                                      VerticalScrollBarVisibility="Visible"
                                      PanningMode="VerticalOnly"
                                      Margin="0,10,0,0">
                            <StackPanel>
                                <Border Background="#3F3C3C3C"
                                        BorderBrush="#3FFFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="5,5,0,0"
                                        Margin="0,0,5,10"
                                        Height="39">
                                    <TextBox
                                        x:Name="SearchBox"
                                        FontFamily="{StaticResource Atkinson Hyperlegible}"
                                        Padding="5"
                                        Foreground="White"
                                        TextChanged="SearchBox_TextChanged">
                                    </TextBox>
                                </Border>
                                <StackPanel x:Name="ModelStoreScroller" />
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem BorderThickness="0"
                         Padding="10,0,10,0"
                         Height="33"
                         Width="132">
                    <TabItem.Header>
                        <TextBlock Text="Descarga Configs"
                                   FontSize="11"
                                   Foreground="White"
                                   FontFamily="{StaticResource Atkinson Hyperlegible}" />
                    </TabItem.Header>
                    <Grid>
                        <Label x:Name="LackOfConfigsText"
                               Visibility="Collapsed"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Content="There is no downloadable configs at the moment, please check again later."
                               Foreground="#DDFFFFFF" />
                        <ScrollViewer x:Name="ConfigStoreMenu"
                                      VerticalScrollBarVisibility="Visible"
                                      PanningMode="VerticalOnly"
                                      Margin="0,10,0,0">
                            <StackPanel>
                                <Border Background="#3F3C3C3C"
                                        BorderBrush="#3FFFFFFF"
                                        BorderThickness="1"
                                        CornerRadius="5,5,0,0"
                                        Margin="0,0,5,10"
                                        Height="39">
                                    <TextBox
                                        x:Name="CSearchBox"
                                        FontFamily="{StaticResource Atkinson Hyperlegible}"
                                        Padding="5"
                                        Foreground="White"
                                        TextChanged="CSearchBox_TextChanged">
                                    </TextBox>
                                </Border>
                                <StackPanel x:Name="ConfigStoreScroller" />
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</UserControl>