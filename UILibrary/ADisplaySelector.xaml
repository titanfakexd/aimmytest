<UserControl x:Class="Aimmy2.UILibrary.ADisplaySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:Ant="clr-namespace:AntWpf.Controls;assembly=AntWpf"
             xmlns:local="clr-namespace:Aimmy2.UILibrary"
             mc:Ignorable="d"
             d:DesignWidth="282.5"
             d:DesignHeight="200">
    <Grid>
        <Border Height="200"
                Background="#3F3C3C3C"
                CornerRadius="0"
                BorderThickness="1,0,1,0"
                BorderBrush="#3FFFFFFF">
            <Grid>
                <!-- Title - Consistent with other controls -->
                <Label x:Name="DisplaySelectorTitle"
                       Padding="10,10,10,10"
                       FontFamily="{StaticResource Atkinson Hyperlegible}"
                       Content="Pantalla Prioritaria"
                       Foreground="#DDFFFFFF"
                       VerticalContentAlignment="Center"
                       FontSize="13"
                       VerticalAlignment="Top"
                       Height="40" />

                <!-- Displays Container -->
                <UniformGrid x:Name="DisplayGrid"
                            Rows="2"
                            Columns="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Width="260"
                            Height="100"
                            Margin="10,50,10,60">
                    <!-- Display items will be added programmatically -->
                </UniformGrid>

                <!-- Current Display Info - Updated to match other controls -->
                <Border Height="50"
                        VerticalAlignment="Bottom"
                        CornerRadius="0">

                    <Label x:Name="CurrentDisplayInfo"
                           FontFamily="{StaticResource Atkinson Hyperlegible}"
                           Content="Pantalla Principal Seleccionada"
                           Foreground="#BBFFFFFF"
                           FontSize="14"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>